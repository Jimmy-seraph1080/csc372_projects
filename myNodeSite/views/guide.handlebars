<body class="bg-black text-white">

    <section id="intro" class="container mt-5 text-center">
        <h1 class="title">{{headerTitle}}</h1>
        <p class="phrase">{{headerSubtitle}}</p>
    </section>
    
    <section id="steps" class="container content mt-4">
        <h2 class="mb-4">Assembly Steps</h2>
        <div class="accordion" id="stepsAccordion">
            {{#each steps}}
            <div class="card step">
                <div class="accordion-header" id="heading{{@index}}">
                    <h5 class="mb-0">
                        <button class="accordion-button bg-dark text-white" type="button" 
                                data-bs-toggle="collapse" data-bs-target="#step{{@index}}" 
                                aria-expanded="false" aria-controls="step{{@index}}">
                            {{this.title}}
                        </button>
                    </h5>
                </div>
                <div id="step{{@index}}" class="accordion-collapse collapse" 
                        aria-labelledby="heading{{@index}}" data-bs-parent="#stepsAccordion">
                    <div class="accordion-body bg-dark text-white">
                        {{{this.content}}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    
    <section id="faq" class="container content mt-4">
        <h2>Frequently Asked Questions</h2>
        <div class="list-group">
            {{#each faqs}}
            <a href="{{this.link}}" class="list-group-item list-group-item-action bg-dark text-white border-light faq-item">
                {{this.question}}
                <span class="faq-answer d-none">{{this.answer}}</span>
            </a>
            {{/each}}
        </div>
    </section>

    <button id="chatbot-icon" class="btn btn-dark text-white position-fixed">
        ðŸ’¬ Chat with us
    </button>
    <div id="chatbot-container" class="position-fixed hidden">
        <div id="chatbot-header" class="d-flex justify-content-between align-items-center">
            <span>Abdullah.AI</span>
            <button id="close-btn" class="btn-close btn-close-white" aria-label="Close"></button>
        </div>
        <div id="chatbot-body">
            <div id="chatbot-messages"></div>
        </div>
        <div id="chatbot-input-container" class="d-flex">
            <label for="chatbot-input" class="visually-hidden">Chatbot Message</label>
            <input type="text" id="chatbot-input" class="form-control" placeholder="Type a message..." />
            <button id="send-btn" class="btn btn-neon">Send</button>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery-3.7.1.min.js"></script>
    <script src="js/jquery.js"></script>
    <script src="js/api.js"></script>
</body>
